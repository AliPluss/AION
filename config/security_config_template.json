{
  "security_enabled": true,
  "dynamic_security": {
    "enabled": true,
    "security_level": "medium",
    "auto_adjust": true,
    "threat_detection": true
  },
  "authentication": {
    "require_auth": false,
    "session_timeout": 3600,
    "max_sessions": 5,
    "token_expiry": 86400
  },
  "command_filtering": {
    "enabled": true,
    "whitelist_mode": false,
    "blocked_commands": [
      "rm -rf",
      "del /f /s /q",
      "format",
      "fdisk",
      "mkfs",
      "dd if=",
      "shutdown",
      "reboot",
      "halt",
      "poweroff",
      "systemctl stop",
      "service stop",
      "kill -9",
      "killall",
      "pkill",
      "chmod 777",
      "chown root",
      "sudo su",
      "su root",
      "passwd",
      "useradd",
      "userdel",
      "usermod",
      "groupadd",
      "groupdel",
      "crontab -e",
      "at now",
      "nohup",
      "screen -d",
      "tmux new",
      "nc -l",
      "netcat -l",
      "python -m http.server",
      "python -m SimpleHTTPServer",
      "wget http",
      "curl -o",
      "git clone",
      "pip install",
      "npm install",
      "apt install",
      "yum install",
      "pacman -S",
      "brew install"
    ],
    "allowed_commands": [
      "ls",
      "dir",
      "pwd",
      "cd",
      "cat",
      "type",
      "head",
      "tail",
      "grep",
      "find",
      "locate",
      "which",
      "whereis",
      "whoami",
      "id",
      "date",
      "uptime",
      "ps",
      "top",
      "htop",
      "df",
      "du",
      "free",
      "uname",
      "hostname",
      "ping",
      "traceroute",
      "nslookup",
      "dig",
      "curl -I",
      "wget --spider",
      "git status",
      "git log",
      "git diff",
      "python --version",
      "node --version",
      "npm --version",
      "pip --version"
    ]
  },
  "code_execution": {
    "enabled": true,
    "sandbox_mode": true,
    "timeout": 30,
    "memory_limit": "512MB",
    "cpu_limit": "50%",
    "network_access": false,
    "file_system_access": "restricted",
    "allowed_imports": [
      "os",
      "sys",
      "json",
      "re",
      "math",
      "random",
      "datetime",
      "time",
      "collections",
      "itertools",
      "functools",
      "operator",
      "string",
      "urllib.parse",
      "base64",
      "hashlib",
      "hmac",
      "uuid",
      "pathlib",
      "typing"
    ],
    "blocked_imports": [
      "subprocess",
      "multiprocessing",
      "threading",
      "asyncio.subprocess",
      "socket",
      "urllib.request",
      "urllib.urlopen",
      "requests",
      "httpx",
      "aiohttp",
      "flask",
      "django",
      "fastapi",
      "tornado",
      "twisted",
      "paramiko",
      "fabric",
      "pexpect",
      "pty",
      "ctypes",
      "cffi",
      "cython",
      "numpy.ctypeslib",
      "pickle",
      "dill",
      "joblib",
      "marshal",
      "shelve",
      "dbm",
      "sqlite3",
      "mysql",
      "postgresql",
      "redis",
      "mongodb"
    ]
  },
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 60,
    "requests_per_hour": 1000,
    "requests_per_day": 10000,
    "burst_limit": 10,
    "lockout_duration": 300,
    "progressive_delays": true
  },
  "content_filtering": {
    "enabled": true,
    "scan_inputs": true,
    "scan_outputs": true,
    "blocked_patterns": [
      "password\\s*=",
      "api[_-]?key\\s*=",
      "secret\\s*=",
      "token\\s*=",
      "private[_-]?key",
      "ssh[_-]?key",
      "credit[_-]?card",
      "ssn\\s*:",
      "social[_-]?security",
      "\\b\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}\\b",
      "\\b\\d{3}-\\d{2}-\\d{4}\\b"
    ],
    "max_input_length": 10000,
    "max_output_length": 50000
  },
  "logging": {
    "enabled": true,
    "log_level": "INFO",
    "log_file": "~/.aion/logs/security.log",
    "log_commands": true,
    "log_code_execution": true,
    "log_api_requests": true,
    "log_security_events": true,
    "rotate_logs": true,
    "max_log_size": "10MB",
    "backup_count": 5
  },
  "alerts": {
    "enabled": true,
    "alert_on_blocked_command": true,
    "alert_on_suspicious_activity": true,
    "alert_on_rate_limit_exceeded": true,
    "alert_on_security_violation": true,
    "notification_methods": [
      "console",
      "log"
    ]
  },
  "encryption": {
    "encrypt_logs": false,
    "encrypt_config": false,
    "encryption_algorithm": "AES-256-GCM",
    "key_derivation": "PBKDF2"
  },
  "backup": {
    "enabled": true,
    "backup_interval": 86400,
    "backup_location": "~/.aion/backups/",
    "max_backups": 7,
    "compress_backups": true
  }
}
