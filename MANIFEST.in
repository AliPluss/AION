# Include the README and other important files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Include configuration files
recursive-include config *.json
recursive-include locales *.json

# Include templates and static files
recursive-include templates *.html *.css *.js
recursive-include static *.css *.js *.png *.jpg *.ico

# Include plugin examples
recursive-include plugins *.py *.json *.md

# Include scripts
include *.sh
include *.bat
include *.py

# Include documentation
recursive-include docs *.md *.rst *.txt

# Exclude development and build files
exclude .gitignore
exclude .env*
exclude *.pyc
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * *.so
recursive-exclude * *.dylib

# Exclude test files
recursive-exclude tests *
exclude test_*.py
exclude *_test.py

# Exclude build directories
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *
