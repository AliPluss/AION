# ü§ñ AION Environment Configuration Template
# Copy this file to .env and fill in your API keys and preferences

# =============================================================================
# üîë AI Provider API Keys
# =============================================================================
# Get your API keys from the respective providers:
# - OpenAI: https://platform.openai.com/api-keys
# - DeepSeek: https://platform.deepseek.com/api-keys
# - Google AI: https://makersuite.google.com/app/apikey
# - OpenRouter: https://openrouter.ai/keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4096

# Google AI API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4096

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-sonnet
OPENROUTER_MAX_TOKENS=4096

# =============================================================================
# üåê AION Application Settings
# =============================================================================

# Default Language (en, ar, no, de, fr, zh, es)
AION_DEFAULT_LANGUAGE=en

# Default Interface Mode (tui, cli, web)
AION_INTERFACE=tui

# Debug Mode (true/false)
AION_DEBUG=false

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
AION_LOG_LEVEL=INFO

# =============================================================================
# üîê Security Configuration
# =============================================================================

# Session timeout in minutes
AION_SESSION_TIMEOUT=60

# Maximum memory limit for code execution (MB)
AION_MAX_MEMORY=100

# Maximum CPU time for code execution (seconds)
AION_MAX_CPU_TIME=30

# Enable sandbox mode (true/false)
AION_SANDBOX_MODE=true

# =============================================================================
# üìÅ File System Configuration
# =============================================================================

# Default workspace directory
AION_WORKSPACE_DIR=./workspace

# Maximum file size for editing (MB)
AION_MAX_FILE_SIZE=10

# Backup retention days
AION_BACKUP_RETENTION=30

# =============================================================================
# üîå Plugin Configuration
# =============================================================================

# Plugin directory
AION_PLUGIN_DIR=./plugins

# Enable plugin system (true/false)
AION_PLUGINS_ENABLED=true

# Plugin execution timeout (seconds)
AION_PLUGIN_TIMEOUT=10

# Plugin memory limit (MB)
AION_PLUGIN_MEMORY_LIMIT=64

# =============================================================================
# üåê Network Configuration
# =============================================================================

# HTTP timeout for API requests (seconds)
AION_HTTP_TIMEOUT=30

# Maximum retries for failed requests
AION_MAX_RETRIES=3

# Enable proxy support (true/false)
AION_PROXY_ENABLED=false

# Proxy URL (if enabled)
AION_PROXY_URL=http://proxy.example.com:8080

# =============================================================================
# üìä Performance Configuration
# =============================================================================

# Maximum concurrent operations
AION_MAX_CONCURRENT=5

# Cache size (MB)
AION_CACHE_SIZE=50

# Enable performance monitoring (true/false)
AION_PERFORMANCE_MONITORING=true

# =============================================================================
# üé® UI/UX Configuration
# =============================================================================

# Color theme (default, dark, light, monokai, github)
AION_COLOR_THEME=default

# Enable animations (true/false)
AION_ANIMATIONS=true

# Terminal width (auto or number)
AION_TERMINAL_WIDTH=auto

# Terminal height (auto or number)
AION_TERMINAL_HEIGHT=auto

# =============================================================================
# üìù Logging Configuration
# =============================================================================

# Log file path
AION_LOG_FILE=./logs/aion.log

# Enable file logging (true/false)
AION_FILE_LOGGING=true

# Enable console logging (true/false)
AION_CONSOLE_LOGGING=true

# Log rotation size (MB)
AION_LOG_ROTATION_SIZE=10

# Log retention count
AION_LOG_RETENTION_COUNT=5

# =============================================================================
# üß™ Development Configuration
# =============================================================================

# Enable development mode (true/false)
AION_DEV_MODE=false

# Enable hot reload (true/false)
AION_HOT_RELOAD=false

# Enable profiling (true/false)
AION_PROFILING=false

# Test mode (true/false)
AION_TEST_MODE=false

# =============================================================================
# üìß Integration Configuration
# =============================================================================

# Email configuration (for notifications)
AION_EMAIL_ENABLED=false
AION_SMTP_SERVER=smtp.gmail.com
AION_SMTP_PORT=587
AION_EMAIL_USER=your_email@gmail.com
AION_EMAIL_PASSWORD=your_app_password

# GitHub integration
AION_GITHUB_TOKEN=your_github_token_here

# Slack integration
AION_SLACK_TOKEN=your_slack_token_here

# =============================================================================
# üí° Usage Instructions
# =============================================================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your API keys and preferences
# 3. Restart AION to apply changes
# 4. Use 'python aion_cli.py --setup' for interactive configuration
#
# üîí Security Note: Never commit your .env file to version control!
# The .env file is already included in .gitignore for your protection.
